# Application
NODE_ENV=development
PORT=3000

# Database (will use in-memory mock for demo without Docker)
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/guddu_db?schema=public"

# JWT
JWT_SECRET=guddu-demo-secret-key-for-localhost-testing-2025
JWT_EXPIRES_IN=1h

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379

# Rate Limiting
THROTTLE_TTL=60000
THROTTLE_LIMIT=1000

# CORS
CORS_ORIGINS=http://localhost:3001,http://localhost:3000

# Demo Mode (skip external services)
SKIP_DATABASE=false
SKIP_REDIS=true
SKIP_ELASTICSEARCH=true
